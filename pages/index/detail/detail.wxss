/* pages/index/detail/detail.wxss */

.container{
    padding-bottom: 120rpx;
}

.header{width: 100%;text-align: center;background: #fff;}
.header>image{width: 326rpx;}

.line{height: 4rpx;background: #e5e5e5;}

.info-wrapper{padding: 33rpx 32rpx 29rpx 52rpx;}
.info-wrapper>.name{font-size: 26rpx;line-height: 36rpx; color: #353535;}
.info-wrapper>.info{font-size: 24rpx;line-height: 34rpx;color: #A2A2A2;}


.footer{position: fixed;bottom: 0;left: 0;width: 100%;height: 110rpx;text-align: center;display: flex;font-size: 32rpx;}
.footer>.l,.footer>.r{flex: 1;line-height: 110rpx;box-sizing: border-box;}
.footer>.l{background: linear-gradient(0deg, #FFFFFF, #FFFFFF), #FAFAFA ;color: #353535;border-top: 1px solid #eee;}
.footer>.r{background: linear-gradient(0deg, #FF5E03, #FF5E03), #FAFAFA; color: #fff}